{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        /* Projects */
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        /* Modules */
        "types": [],

        /* Emit */
        "outDir": "./out-tsc/app",

        /* Interop Constraints */
        "isolatedDeclarations": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts"]
}
